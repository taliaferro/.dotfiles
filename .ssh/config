# Notes:
# - From the ssh_config manual:
#     "Since the first obtained value for each parameter is used, more host-specific declarations should be given near the beginning of the file, and general defaults at the end."

IgnoreUnknown UseKeychain,AddKeysToAgent

CanonicalDomains        taliafer.ro llnl.gov
CanonicalizeHostname    always

Host caitsith
    HostName 192.156.133.233
    User talia1

Host jenova
	Hostname 192.168.221.100
	ProxyJump caitsith
    User talia1

Host shell2 koji ipa1 ipa2 repo1 builder*
  User jtaliafe
  ProxyJump tossgw.llnl.gov

Host czgitlab* rzgitlab* izgitlab*
    ProxyCommand        ssh izgw -W %h:7999
    ControlMaster       no

# Jump host
Host izgw*
    User                     jtaliafe
    PreferredAuthentications password
    DynamicForward           5000

Match canonical host *.llnl.gov,!izgw*.llnl.gov,!*gitlab.llnl.gov
    ProxyJump izgw
    User      jtaliafe

# Default values for all hosts, if not overridden above
Host *
    ControlMaster       auto
    ControlPath         ~/.ssh/%r@%h:%p
    ControlPersist      120h

    IdentitiesOnly      yes
    IdentityFile        ~/.ssh/id_rsa
    ForwardAgent        no

    ForwardX11          no
    ForwardX11Trusted   no
    # MacOS only options
    AddKeysToAgent yes
    UseKeychain    yes

